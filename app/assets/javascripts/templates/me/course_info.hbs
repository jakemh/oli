<div class="container-me">
  <div class="oli-bold oli-font-bigger"> 
    Progress
  </div>
  <div class="inner-course-info">
    <div class="select-course-info oli-bold">
      Select to enter course
    </div>

    {{#each obj in topicsView.content}}
      <div {{bindAttr class=":item-course-info obj.available:active-course-info"}}>
        <div {{bindAttr class=":logo-course-info"}}></div>
        {{#link-to  'topics' content.id obj.name class=obj.available:active-course-info}}{{obj.name}}{{/link-to}}

      </div>
    {{/each}}
  </div>

  <div class="oli-bold oli-font-bigger badges-container-course-info"> 
    Badges
  </div>
    <div class="inner-course-info">
      {{#each controller.badgeCount}}
        <div class="badge-circle-course-info">
        </div>
      {{/each}}
    </div>
</div>
