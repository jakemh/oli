
<div class="oli-bold oli-container">
  Free Video Content
</div>
{{#each video in videosFormatted.content}}
  
  <div {{action goToVideo video}} class="free-video video-container-free-videos oli-text-smaller">
   
    <div class="thumb-free-videos">
      <div class="play-free-videos">
        <div class="circle-free-videos">        
          <div class="arrow-free-videos"></div>
        </div>
      </div>

      {{video-player 
      width=video.width
       height=video.height
        source=video.source
        controls=false}}

    </div>

    {{#link-to 'free_videos_select' video.id}} {{video.title}} {{/link-to}}

    <div class="description-free-videos">
      {{video.description}}
    </div>
  </div>
{{/each}}

  <button class="ladda-button  smaller-button" data-style="zoom-out" {{action "buttonClicked" this on="click"}}>
    <span class="ladda-label">Buy Course</span>  </button>
 
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-oli">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title modal-title-oli" id="myModalLabel">Congratulations!</h4>
      </div>
      <div class="modal-body">
        <p>This is your first step toward finding your  OLI.</p>
        <p>Enjoy the course and have lots of fun!</p>
              </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
