<div class="button-activity back-button-activity">
  <button class="smaller-button oli-inactive" data-style="zoom-out" {{action "backButtonClicked" this on="click"}}>
    <span class="ladda-label"></span>
    Back
  </button>

</div>

<div class="button-activity forward-button-activity">
  <button {{bind-attr class=":ladda-button :smaller-button buttonDisabled:oli-inactive" disabled=buttonDisabled}} data-style="zoom-out" {{action "buttonClicked" this on="click"}}>
    <span class="ladda-label">    {{controller.buttonText}}
</span>
  </button>

</div>

<div class="activity-status oli-text-smaller">
  {{outlet status}}
</div>