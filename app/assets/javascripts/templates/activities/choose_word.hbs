<div class="description-box oli-text">
  {{activityController.description}}
</div>
<div clas="row">
  {{#view Oli.WordSelectionView}}
    <div class='select-word-container'>
      {{#each controller.component.words}}
        <!-- Rounded ONE -->
        <div class='col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xs-5 description oli-text-smaller'>
          <div class="roundedOne">

              {{view Ember.Checkbox checked=this.selected type="checkbox" name=check id=this.id class="roundedOne"}}
              <label  {{bind-attr for="this.id"}} ></label>
            </div><div class="select-word"> {{this.word}}
          </div>
         </div>
      {{else}}
        {{partial "loadingScreen"}}
      {{/each }}
      
      {{outlet newWord}}


    </div>
  {{/view}}
</div>
