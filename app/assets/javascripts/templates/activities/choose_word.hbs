<br><br>

<div class="description">
{{this.description}}
</div>
<br>
<br>

<div clas="row">
{{#view Oli.WordSelectionView}}
<div class="hidden">{{view.selected}}</div>
<div class='select-word-container'>
{{#each controller.words}}
<!-- Rounded ONE -->
<div class='col-lg-3 col-md-4 col-sm-4 col-xs-5 description'>
  <div class="roundedOne">

      {{view Ember.Checkbox checked=this.selected type="checkbox" name=check id=this.id class="roundedOne"}}
      <label  {{bindAttr for="this.id"}} ></label>
    </div><div class="select-word"> {{this.word}}</div>
 </div>

  {{/each }}
  <div class='col-lg-3 col-md-4 col-sm-4 col-xs-5 description'>
    <div class="roundedOne">

      {{view Oli.NewWordCheck checked=this.selected type="checkbox" name=check id=this.id class="roundedOne" checkBinding="controller.checked"}}

      <label  {{bindAttr for="this.id"}} ></label>
    </div><div class="select-word">{{#view Oli.NewWordBox class="new-word-box" cont=controller value="" placeholder="New Word" }}

    {{/view}}
    </div>
 </div>

</div>
{{/view}}
</div>
