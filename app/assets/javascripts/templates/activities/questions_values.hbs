{{#view Oli.AnswerValuesView}}
   <div class="description-box oli-text">
       {{controller.controllers.activities.description}}
   </div>

  <div class="component-title qa-title">
    {{controller.comp.content.title}}
  </div>

  <div class="answer-box">
    {{controller.dependentEntry.content.post}}
  </div>

  {{textarea class="qa-values-box" id="values-box" placeholder="Begin listing your values here"
  valueBinding="controller.input"
  }}

  <div class="bank-box">
    {{#each controller.parsedWords}}
      {{#view Oli.BoxView value=this class="word-pill"}}
        <span>{{this}}</span>
      {{/view}}
    {{/each}}
  </div>

{{/view}}
